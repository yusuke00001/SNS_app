<div class="card mb-3">
  <div class="card-body">
    <h4 class="card-title"><%= link_to item.title, post_path(item) %></h4><br>
    <p class="card-text"><%= simple_format(item.description) %> </p>
    <p class="card-text text-end "><%= t('.user')%>:<%= item.user.name %>
    <% if item.is_a?(Bookmark) %>
      <div class="d-flex justify-content-between">
        <%= form_with url: bookmark_path(item), method: :delete, class: "d-inline" do %>
          <button type="submit" class="btn btn-outline-danger">
            <i class="fa-solid fa-heart"></i> いいね解除
          </button>
        <% end %>
        <p class="card-text text-end "><%= t('.post_day')%>:<%= item.created_at.strftime('%Y年%m月%d日') %></p>
      </div>
    <% else %>
      <p class="card-text text-end "><%= t('.post_day')%>:<%= item.created_at.strftime('%Y年%m月%d日') %></p>
    <% end %>
  </div>
</div>
