        <div class="card-body">
      <h4 class="card-title"><%= @post.title %></h4>
      <div class="mb-3">
        <p>by <%= @post.user.name %> <%= @post.created_at.strftime('%Yå¹´%mæœˆ%dæ—¥') %></p>
      </div>
