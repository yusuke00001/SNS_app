  </div>
</div>
<div class="container mt-2">  
  <div class="mx-auto" style="max-width: 500px;">
    <strong><%= t('.comment_title')%></strong>
    <div class="card-body">
      <%= form_with(model: [@post, @comment], class: "needs-calidation") do |form| %>
        <div class="mb-3">
          <%= form.text_area :content, class: "form-control" %>
        </div>
